@model CollectionKnowledgeProject.Models.Question

@{
}

<h2>Editare intrebare</h2>
<br />


@using (Html.BeginForm(controllerName: "Questions", actionName: "Edit",
      method: FormMethod.Post, routeValues: new { id = Model.QuestionID }))

{
    @Html.Label("Title", "Titlu Intebare")

    <br />

    @Html.Editor("Title", new { @class = "form-control" })
    <br />

    @Html.ValidationMessage("Title", null, new { @class = "text-danger" })

    <br />
    <br />


    @Html.Label("Content", "Continut Intebare")

    <br />

    @Html.Editor("Content", new { @class = "form-control" })
    <br />

    @Html.ValidationMessage("Content", null, new { @class = "text-danger" })

    <br />
    <br />

    <button class="btn  btn-primary" type="submit">Editeaza intrebarea</button>

}

